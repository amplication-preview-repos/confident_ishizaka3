datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  createdAt      DateTime @default(now())
  id             String   @id @default(cuid())
  paymentDetails Json?
  profilePic     Json?
  rating         Float?
  rideHistory    Json?
  updatedAt      DateTime @updatedAt
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?
}

model Ride {
  createdAt     DateTime        @default(now())
  destination   String?
  driver        String?
  id            String          @id @default(cuid())
  location      String?
  passengers    Int?
  price         Float?
  riderBookings RiderBooking[]
  status        EnumRideStatus?
  time          DateTime?
  updatedAt     DateTime        @updatedAt
}

model Chat {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  message   String?
  receiver  String?
  sender    String?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
}

model RiderBooking {
  bookingTime   DateTime?
  createdAt     DateTime                       @default(now())
  id            String                         @id @default(cuid())
  paymentMethod EnumRiderBookingPaymentMethod?
  ride          Ride?                          @relation(fields: [rideId], references: [id])
  rideId        String?
  rider         String?
  updatedAt     DateTime                       @updatedAt
}

model User {
  createdAt   DateTime      @default(now())
  email       String?       @unique
  firstName   String?
  id          String        @id @default(cuid())
  lastName    String?
  password    String
  phoneNumber String?
  profiles    Profile[]
  role        EnumUserRole?
  roles       Json
  updatedAt   DateTime      @updatedAt
  username    String        @unique
}

enum EnumRideStatus {
  Option1
}

enum EnumRiderBookingPaymentMethod {
  Option1
}

enum EnumUserRole {
  Option1
}
